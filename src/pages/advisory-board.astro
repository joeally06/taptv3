            </a>
          </div>
        </div>

        <!-- Industry Members -->
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-primary-800 mb-6 text-center">TAPT Industry Members</h2>
          
          <div class="space-y-8">
            {industryMembers.map(member => (
              <div class="border-b border-gray-200 last:border-b-0 pb-8 last:pb-0">
                {member.logo && (
                  <img 
                    src={member.logo}
                    alt={`${member.organization} Logo`}
                    class="h-24 object-contain mx-auto mb-4"
                  />
                )}
                
                <div class="text-center">
                  {member.name && (
                    <h3 class="text-xl font-semibold text-primary-700 mb-2">{member.name}</h3>
                  )}
                  {member.title && (
                    <p class="text-gray-700 mb-1">{member.title}</p>
                  )}
                  <p class="text-gray-700 mb-2">{member.organization}</p>
                  {member.location && (
                    <p class="text-gray-600 mb-2">{member.location}</p>
                  )}
                  {member.email && (
                    <a 
                      href={`mailto:${member.email}`}
                      class="text-primary-600 hover:text-primary-800"
                    >
                      {member.email}
                    </a>
                  )}
                  
                  {member.representatives && (
                    <div class="mt-4 space-y-2">
                      {member.representatives.map(rep => (
                        <div>
                          <p class="font-medium text-gray-800">{rep.name}</p>
                          {rep.email && (
                            <a 
                              href={`mailto:${rep.email}`}
                              class="text-primary-600 hover:text-primary-800 text-sm"
                            >
                              {rep.email}
                            </a>
                          )}
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>