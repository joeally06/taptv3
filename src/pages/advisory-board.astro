<Layout title="Advisory Board">
  <div class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <img 
            src="/images/advisory/header.jpg"
            alt="TAPT Advisory Board Header"
            class="w-full max-w-sm mx-auto mb-8 rounded-lg shadow-md"
          />
          <h1 class="text-3xl font-bold text-primary-800 mb-4">2025-2026 TAPT Advisory Board</h1>
          <div class="w-20 h-1 bg-accent-500 mx-auto mb-6"></div>
        </div>

        <!-- Advisory Board Members -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {advisoryMembers.map(member => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="relative pt-[100%]">
                <img 
                  src={member.image} 
                  alt={member.name}
                  class="absolute inset-0 w-full h-full object-cover"
                />
              </div>
              <div class="p-4">
                <h2 class="text-xl font-bold text-primary-700 mb-1">{member.name}</h2>
                <p class="text-lg font-semibold text-primary-600 mb-2">{member.title}</p>
                {member.role && (
                  <p class="text-gray-700 mb-1">{member.role}</p>
                )}
                {member.organization && (
                  <p class="text-gray-700 mb-2">{member.organization}</p>
                )}
                
                {member.address && (
                  <div class="text-sm text-gray-600 mb-3">
                    {member.address.split('\n').map(line => (
                      <p>{line}</p>
                    ))}
                    {member.city && (
                      <p>{member.city}, {member.state} {member.zip}</p>
                    )}
                  </div>
                )}

                {member.contact && (
                  <div class="space-y-1 mb-3">
                    {member.contact.office && (
                      <p class="text-sm">
                        <span class="font-medium">Office:</span> {member.contact.office}
                      </p>
                    )}
                    {member.contact.cell && (
                      <p class="text-sm">
                        <span class="font-medium">Cell:</span> {member.contact.cell}
                      </p>
                    )}
                    {member.contact.email && (
                      <a 
                        href={`mailto:${member.contact.email}`}
                        class="text-sm text-primary-600 hover:text-primary-800 block"
                      >
                        {member.contact.email}
                      </a>
                    )}
                  </div>
                )}

                {member.notes && (
                  <p class="text-sm text-gray-600 italic mb-3">{member.notes}</p>
                )}

                {member.website && (
                  <a 
                    href={member.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-sm text-primary-600 hover:text-primary-800"
                  >
                    Visit Website
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                      <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>

        <!-- State Government Section -->
        <div class="bg-white rounded-lg shadow-md p-8 mb-12">
          <h2 class="text-2xl font-bold text-primary-800 mb-6 text-center">Tennessee State Government Student Transportation Officials</h2>
          <p class="text-center text-gray-600 mb-8">Ex Officio Members of the TAPT Board (Non-Voting)</p>
          
          <div class="flex flex-wrap justify-center gap-8">
            <a 
              href="https://www.tn.gov/safety/tnhp/cvemain/pupiltransport.html"
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <img 
                src="/images/advisory/dos-logo.jpg"
                alt="Department of Safety Logo"
                class="h-24 object-contain"
