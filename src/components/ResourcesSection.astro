---

<section id="forms" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h2 class="text-3xl font-bold text-primary-800 mb-4">Resources & Forms</h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-6"></div>
      <p class="text-lg text-gray-600">Access important documents, forms, and resources for pupil transportation professionals.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {resources.map(resource => (
        <a 
          href={resource.link}
          target={resource.link.startsWith('http') ? "_blank" : undefined}
          rel={resource.link.startsWith('http') ? "noopener" : undefined}
          class="group bg-white border border-gray-200 hover:border-primary-300 rounded-lg p-6 transition-all hover:shadow-md"
        >
          <div class="mb-4 text-primary-600 group-hover:text-primary-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={getIcon(resource.icon)}></svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2 group-hover:text-primary-700 transition-colors">{resource.title}</h3>
          <p class="text-sm text-gray-600">{resource.description}</p>
          <div class="mt-4 text-primary-600 group-hover:text-primary-700 flex items-center text-sm font-medium">
            <span>Access Resource</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>